{
  "name": "gulp-spawn-shim",
  "version": "0.0.2",
  "description": "Thin wrapper (shim) of Node.js's child_process.spawn() with respect to gulp (vinyl file streams) by binding to stdin, stdout, and stderr.",
  "main": "index.js",
  "scripts": {
    "test": "istanbul test --report html _mocha",
    "test-travis": "istanbul cover _mocha -- -R spec;A=$?;cat coverage/lcov.info | coveralls;exit $A"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dashed/gulp-spawn-shim.git"
  },
  "keywords": [
    "gulpplugin",
    "spawn",
    "cli",
    "shell",
    "exec"
  ],
  "author": "Alberto Leal (https://github.com/dashed)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dashed/gulp-spawn-shim/issues"
  },
  "homepage": "https://github.com/Dashed/gulp-spawn-shim",
  "devDependencies": {
    "mocha": "*",
    "chai": "*",
    "istanbul": "*",
    "coveralls": "~2",
    "gulp-rename": "~0",
    "gulp": "~3",
    "event-stream": "~3"
  },
  "dependencies": {
    "async-queue-stream": "~0",
    "gulp-util": "~2",
    "tmp": "~0"
  }
}
